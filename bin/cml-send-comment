#!/bin/bash
if [ -z $1 ]; then
	echo "Usage: cml-send-comment file.md"
	echo "Environment variables: repo_token, GITHUB_REPOSITORY"
	return 1;
fi

head_hash=$(git show --format='%H')
echo Commit hash: $head_hash
echo Repository: $GITHUB_REPOSITORY
file=$(cat $1)
curl -X POST -H "Authorization: token ${repo_token}" -d"{\"body\":\"$file\"}" https://api.github.com/$GITHUB_REPOSITORY/commits/$head_hash/comment
